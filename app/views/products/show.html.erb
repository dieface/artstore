<div class="row">
  <div class="col-md-5">
    <%= render_product_photo(@product.default_photo, :medium) %>
  </div>
 
  <div class="col-md-7">
    <h2> <%= render_product_name(@product) %> </h2>

    <div style="height:100px;">
      <p>
        <%= render_product_desc(@product) %>
      </p>
    </div>

    <!-- <div> 數量 : <%# render_product_quantity(@product) %> </div> -->
    <div class="">
      數量：
      <select class="product-quantity form-control" style="display: inline-block; width: 70px;">
        <% @product.quantity.to_i.times do |i| %>
          <option value=""> <%= i+1 %> </option>
        <% end %>
      </select>
    </div>

    <div class="product-price"> $ <%= render_product_price(@product) %> </div>

    <div class="pull-right">
      <%= link_to("加入購物車", add_to_cart_product_path(@product, 5) , :method => :post , :class => "btn btn-primary btn-lg btn-danger") %>
    </div>
  </div>
</div>


